/* pages/movies/movies.wxss */

.homeContainer {
    display: flex;  
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}

.homeContainer .searchGreenBgView {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: end;
    background-color: #42bd55;
    width: 100%;
    height: 100rpx;
    margin-bottom: 20rpx;
}

.homeContainer .searchGreenBgView .searchView {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    border-radius: 8rpx;
    width: 100%;
    margin: 20rpx;
}

.homeContainer .searchGreenBgView .searchView .searchImage{
    width: 30rpx;
    height: 30rpx;
}

.homeContainer .movieContainerView {
    display: flex;  
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
    padding: 0 15rpx;
}

.homeContainer .movieContainerView .section {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: calc(100% - 30rpx);
    margin-bottom: 20rpx;
}

.section .right {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #42bd55;
}

.section .right .arrow{
    width: 30rpx;
    height: 30rpx;
    margin-left: 5rpx;
}

.items .item {
    display: flex;
    flex-direction: column;
    font-size: 30rpx;
}

.items .item .picture{
    width: 180rpx;
    height: 220rpx;
    border-radius: 10rpx;
}

.items .item .stars .star{
    width: 30rpx;
    height: 30rpx;
}