
<view class="homeContainer">

    <view class="searchGreenBgView">
        <view class="searchView">
            <image class="searchImage" src="/assets/imgs/search.png">
            </image>
            搜索
        </view>
    </view>
    
    <view wx:for="{{ allMovies }}" wx:for-item="moviesSection" class="movieContainerView">
        <view class="section">
          <view class="sectionTitle"> {{moviesSection.title}} </view>
            <view class="right">
                查看更多
                <image class="arrow" src="/assets/imgs/arrow_green.png">
                </image> 
            </view>
        </view>

        <view class="items">
            <view wx:for="{{ moviesSection.movies }}" class="item" wx:for-item="item">
                <image class="picture" src="{{ item.item.cover_image_url }}"/>
                <view class="title">{{ item.item.title }}</view>
                <block wx:if="{{ item.item.rating > 0 }}"> 
                  <view class="stars">
                    
                    <image class="star" wx:for="{{ item.stars.on }}" src="/assets/imgs/星星2.png"/>
                    <image class="star" wx:if="{{ item.stars.half }}" src="/assets/imgs/星星3.png"/>
                    <image class="star" wx:for="{{ item.stars.off }}" src="/assets/imgs/星星1.png"/>

                    <view class="scoreTitle">
                      {{item.item.rating}}
                    </view>
                  </view>
                </block>
                <block wx:else>
                  暂无分数
                </block>
            </view>
        </view>
    </view>

    
    <text > 
        我的经纬度是：经度：{{ longitude }} 维度：{{ latitude }}
        我的城市是：{{ city }}
        我的地址是：{{ address }}
    </text>
</view>
 